{% extends "layout.njk" %}
{% block content %}
    <form action="/students" method="post" class="card">
        <h1>Cadastro de Aluno</h1>
        <fieldset>
            <legend>
                <h2>Dados do aluno</h2>
            </legend>

            <div class="field-group">
                <div class="field">
                    <label for="name">Nome do Aluno</label>
                    <input type="text" name="name" required="required">
                </div>
            </div>

            <div class="field-group">
                <div class="field">
                    <label for="cpf">CPF</label>
                    <input type="text" name="cpf" required="required" minlength="14" maxlength="14" class="form-control" onkeypress="$(this).mask('000.000.000-00');">
                </div>

                <div class="field">
                    <label for="email">Email</label>
                    <input type="email" name="email" required="required">
                </div>
            </div>    
            

            <div class="field-group">
                 <div class="field">
                    <label for="fone">Telefone</label>
                    <input type="text" name="fone" required="required" minlength="14" maxlength="15" class="form-control" onkeypress="$(this).mask('(00) 0000-00009')">
                </div>                         

                <div class="field">
                    <label for="cep">Cep</label>
                    <input id="cep" type="text" name="cep" required="required" minlength="9" maxlength="9" class="form-control" onkeypress="$(this).mask('00000-000')">
                </div>
            </div>

            <div class="field-group">
                 <div class="field">
                    <label for="address">Endereço</label>
                    <input id="address" type="text" name="address" required="required">
                </div>               

                <div class="field">
                    <label for="addressnumber">Número / Complemento</label>
                    <input id="addressnumber" type="text" name="addressnumber">
                </div>

                <div class="field">
                    <label for="neighborhood">Bairro</label>
                    <input id="neighborhood" type="text" name="neighborhood" required="required">
                </div>
            </div>


            <div class="field-group">
                 <div class="field">
                    <label for="uf">Estado</label>
                    <select id="uf" name="uf">
                        <option>Selecione um estado</option>
                    </select>
                    <input type="hidden" name="state">
                </div>               

                <div class="field">
                    <label for="city">Cidade</label>
                    <select id="city" name="city" disabled="disabled">
                        <option>Selecione a cidade</option>
                    </select>
                </div>
            </div>

        </fieldset>
        <fieldset>
            <legend>
                <h2>Dados do Curso</h2>
            </legend>
            <div class="field-group">
                <div class="field">
                    <label for="course">Curso</label>
                    <select name="course" required="required">
                        {% for course in courses %}
                            <option id="{{course.cod}}" value="{{course.cod}}">{{course.coursename}}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </fieldset>
        <button type="submit">Cadastrar aluno</button>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="../js/script.js"></script>
{% endblock content %}